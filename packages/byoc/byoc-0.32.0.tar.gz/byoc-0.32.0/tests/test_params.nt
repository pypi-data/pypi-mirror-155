test_param:
  -
    id: keys
    obj:
      > class DummyConfig(Config):
      >     def load(self):
      >         yield DictLayer({'x': 1, 'y': 2, 'z': 3})
      >
      > f = lambda d: (d['x'], d['y'])
      >
      > class DummyObj:
      >     __config__ = [DummyConfig]
      >     x = byoc.param()
      >     x1 = byoc.param('x')
      >     x2 = byoc.param(Key(DummyConfig, 'x'))
      >     y = byoc.param(Key(DummyConfig))
      >     z = byoc.param(DummyConfig)
      >     f1 = byoc.param(f)
      >     f2 = byoc.param(Key(DummyConfig, f))
    expected:
      x: 1
      x1: 1
      x2: 1
      y: 2
      z: 3
      f1: 1, 2
      f2: 1, 2
