{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "rootDir": "src",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "ES2017",
    "types": ["mocha", "node"],
    "lib": [
      "ES2017",
      "dom",
      "es2015.proxy"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
